//       :param person1Id: 933
//       :param person2Id: 102

FROM     GRAPH SNB.Native.SNBGraph
MATCH    (person1:Person)-[k:KNOWS{1,3}]-(person2:Person)
WHERE    person1.id = $person1Id AND
         person2.id = $person2Id
GROUP BY person1,
         person2
SELECT   MIN(PATH_HOP_COUNT(k)) AS shortestPathLength;
