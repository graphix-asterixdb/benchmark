SET      `graphix.semantics.pattern` "edge-isomorphism";
WITH     zombies AS ( FROM       GRAPH SNB.Native.SNBGraph
                      MATCH      (country:Country)<-[:IS_PART_OF]-(:City)<-[:IS_LOCATED_IN]-(zombie:Person)
                      LEFT MATCH (zombie)<-[:HAS_CREATOR]-(message:Message)
                      WHERE      zombie.creationDate < $endDate AND
                                 country.name = $country AND
                                 ( message IS UNKNOWN OR
                                   zombie.creationDate < $endDate )
                      GROUP BY   zombie.id AS zombieId,
                                 zombie.creationDate AS zombieCreationDate
                      LET        months = 12 * ( GET_YEAR($endDate) - GET_YEAR(zombieCreationDate) ) +
                                          ( GET_MONTH($endDate) - GET_MONTH(zombieCreationDate) ) + 1
                      HAVING     ( COUNT(message.id) / months ) < 1
                      SELECT     VALUE zombieId )
FROM     GRAPH SNB.Native.SNBGraph
MATCH    (zombie:Person)
LET      zombieLikeCount = ( FROM   GRAPH SNB.Native.SNBGraph
                             MATCH  (zombie)<-[:HAS_CREATOR]-(message:Message)<-[:LIKES]-(likerZombie:Person)
                             WHERE  likerZombie.id IN zombies AND
                                    likerZombie.creationDate < $endDate
                             SELECT VALUE COUNT (likerZombie.id) )[0],
         totalLikeCount  = ( FROM   GRAPH SNB.Native.SNBGraph
                             MATCH  (zombie)<-[:HAS_CREATOR]-(message:Message)<-[:LIKES]-(likerPerson:Person)
                             WHERE  likerPerson.creationDate < $endDate
                             SELECT VALUE COUNT(likerPerson.id) )[0]
WHERE    zombie.id IN zombies
SELECT   zombie.id,
         zombieLikeCount,
         totalLikeCount,
         CASE totalLikeCount
              WHEN 0
              THEN 0.0
              ELSE zombieLikeCount / totalLikeCount
         END AS zombieScore
ORDER BY zombieScore DESC,
         zombie.id ASC
LIMIT    $limit;